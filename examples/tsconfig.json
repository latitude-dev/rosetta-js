{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "rosetta-ai": ["../src/index.ts"],
      "$package/*": ["../src/*"]
    }
  },
  "include": ["*.ts", "*.test.ts"]
}
